<%= simple_form_for @movie, url: @movie.persisted? ? admin_movie_path(@movie) : admin_movies_path do |f| %>
  <div class="row justify-content-center">
    <div class="col-5">
      <h3 class="fs-3"><%= @movie.persisted? ? 'Edit Movie' : 'New Movie' %></h3>
    </div>
    <div class="col-3 text-end">
      <%= f.submit nil, class: 'btn btn-dark' %>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-6"><%= f.input :title %></div>
    <div class="col-12 col-lg-2"><%= f.input :duration %></div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-8"><%= f.input :description, as: :text, input_html: { rows: 3 } %></div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-12 col-lg-4"><%= f.input :release_date, as: :date, start_year: 1900 %></div>
    <div class="col-12 col-lg-4"><%= f.input :poster %></div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-6 col-lg-2"><%= f.input :genre, as: :array %></div>
    <div class="col-6 col-lg-2"><%= f.input :countries, as: :array %></div>
    <div class="col-6 col-lg-2"><%= f.input :directors, as: :array %></div>
    <div class="col-6 col-lg-2"><%= f.input :actors, as: :array %></div>
  </div>
<% end %>
